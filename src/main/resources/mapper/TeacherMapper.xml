<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.springmvc.dao.TeacherDAO">

	<select id="getTeacherByTid" resultType="teacher">
		select * from teacher where tid=#{id}
	</select>
	<select id="getAllTeacherByStatus" resultType="teacher">
		select * from teacher where status=#{status}
	</select>
	
</mapper>